{
  "name": "simple-node-express-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext js,jsx,ts,tsx.--fix",
    "format": "prettier --write \"**/*.{ts,js,json}\"",
    "lint:format": "npm run lint && npm run format",
    "build": "rimraf dist && npx tsc --project tsconfig.build.json",
    "dev": "nodemon -r dotenv/config ./src/server.ts",
    "start": "node ./dist/server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{css,less,scss,html,json,jsx,tsx,js,ts}": [
      "npm run lint:format"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PedroHenrique-git/simple-node-express-boilerplate.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PedroHenrique-git/simple-node-express-boilerplate/issues"
  },
  "homepage": "https://github.com/PedroHenrique-git/simple-node-express-boilerplate#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.6.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^28.1.3",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "express": "^4.18.1"
  }
}
